{
  "compilerOptions": {
    "lib": [
      "es2015",
      "DOM",
      "es2017.object"
    ],
//    "noImplicitThis": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "es5",
    "newLine": "lf",
    "outDir": "dist",
    "declaration": true,
    "noEmitOnError": false
  },
  "include": [
    "src/*"
  ]
}
